<script src="js/index.js" type="text/javascript" language="JavaScript"></script>
<div >
  <div class="banner">
    <div class="logoContainer">
      <div class="logoImg"></div>
      <div class="containerF text1">
        <form>
            <input type="text" ng-model="search" name="searchP" placeholder="What are you searching for?"/>
        </form>
      </div>

        <div class="menuContainer text1">
          <nav class="menul">
            <a>Home</a>
            <a>Sign In</a>
            <a>Projects</a>
<!--              <ul class="menul subMenu">
                <li><a>Most Successful</a></li>
                <li><a>Failors</a></li>
              </ul>-->
          </nav>
        </div>
    </div>
  </div>

  <div class="frontView center">
    <div class="mainContent" ng-controller="ProjectsCtrl">
      <h3 class="header center">Welcome!</h3>
      <div class='tabs_container center'>
        <div class="tab" ng-click="changeView(1)">All</div>
        <div class="tab" ng-click="changeView(2)">Project</div>
        <div class="tab" ng-click="changeView(3)">Daily</div>
        <div class="tab" ng-click="changeView(4)">Total</div>
      </div>
        <div class="content center" style='"display:{{view1VisibilityMode}}"'>
      <div class="categories">
        <ul>
          <li ng-click="getProjects()">All</li>
          <li ng-click="getProjects(category)" ng-repeat="category in categories">{{category.description}}</li>
        </ul>
      </div>
      <ul class="projects unstyled">
          {{percent()}}
          <li class="project" ng-repeat="project in projects | filter: search ">
            <div class="frame till">
              <div class="innerFrame white">
              <a target="_blank" href="{{project.project_link}}">
                <img ng-src='{{project.picture_link}}' width="200" height="125"/>
              </a>
              </div>
              <div class="wrap">
                <div class="title white" ng-click="openGraph(project)" >{{project.name}}</div>
                <div class="total white {{color(project)}}">{{project.percent}}%</div>
              </div>
              <div class="selectionToggle">
                <input type="button" value="Toggle view" onclick="toggleView(this)">
              </div>
            </div>
          </li>
        </ul>
      </div>
     </div>
